.container.form-login[style="max-width:400px;"]
  .container
    h2.text-center.title-form
      | Login
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .field
        = f.label :email
        br
        = f.email_field :email, autofocus: true, autocomplete: "email", required:"required" ,class:"form-control input-form"
      p

      .field
        = f.label :password
        br
        = f.password_field :password, autocomplete: "current-password" , required:"required" ,class:"form-control input-form"
      p

      .actions
        = f.submit "Login", class:"btn button icon" ,style:"width:180px; margin-bottom:30px"
      p

    = render "devise/shared/links"