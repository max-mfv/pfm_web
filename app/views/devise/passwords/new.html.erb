<div class="container form_login" style="  width:30% ">
  <div class="container container_2">
    <h2 class="text-center title_form">Forgot password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"Enter your email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", required:"required" ,class:"form-control input_form" %>
      </div>
      <p>
      <div class="actions">
        <%= f.submit "Send instructions email", class:"btn login_btn icon"  %>
      </div>
    <% end %>

</div>