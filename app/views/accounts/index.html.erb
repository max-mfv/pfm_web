<div class="row">
  <div class="col-sm-2 border-right">
  </div>
  <div class="col-sm-10 border-left abc">
    <div class="row">
      <div class="col-sm-6">
        <h1>Account</h1>
      </div>

      <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#newForm" data-whatever="@getbootstrap">New Account</button>
      <%= render "form", account: @account, target: "newForm", type: "new" %>
    </div>

    <table class="table lists">
      <tr>
        <th scope="col">Account name</th>
        <th scope="col">Status</th>
        <th scope="col">Actions</th>
      </tr>
      <tbody>
        <% @accounts.each do |account| %>
          <% if account.id %>
            <tr class=<%= account.status ? "enable" : "disable" %>>
              <td><%=account.name %></td>
              <td><%= account.status ? "Enable" : "Disable" %></td>
              <td>
                <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="<%= "#editForm_#{account.id}" %>">Edit Account</button>
                <%= render "form", account: account, target: "editForm_#{account.id}", type: "edit" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
    <div class="form-section">
      <div class="edit-area">
      </div>
    </div>

  </div>
</div>
