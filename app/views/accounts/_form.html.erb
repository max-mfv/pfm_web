<div class="modal fade" id=<%= target %> tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <% if type == "new" %>
          <h5>New Form</h5>
        <% else %>
          <h5>Edit Form</h5>
        <% end %>
      <%= form_with(model: account) do |form| %>
          <div class="form-group">
            <%= form.label :name, class:"col-form-label"%>
            <%= form.text_field :name, class:"form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :status, class:"col-form-label"%>
            <%= form.check_box :status, class:"form-control" %>
          </div>

          <div class="actions">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <%= form.submit class:"btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
